	/**
	 * Launch the application.
	 */
	public static Login_Page_View get_instance() {
		ImageIcon ico = new ImageIcon("D:\\NEU\\Object Oriented Programming with Java\\Project\\DayCare\\BostonChildCare\\B.png");
		BufferedImage img;
		try {
			img = ImageIO.read(new File("D:\\NEU\\Object Oriented Programming with Java\\Project\\DayCare\\BostonChildCare\\B.png"));
			instance.setIconImage(img);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return instance;
	}
